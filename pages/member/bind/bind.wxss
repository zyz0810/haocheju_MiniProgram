/**addshop.wxss**/

.page {
  background: #f1f1f1;
}

.item {
  display: flex;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  color: #000;
  background: #fff;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 2% 0 5%;
  position: relative;
   border-bottom:1px solid #eee; 
}
.location{
  font-size: 16px;
  color: #000;
  background: #fff;
  padding: 1% 2% 0 5%;
  margin-top: 20rpx;
}
.location button{
  width: 80%;
}

.itemleft {
  width: 500rpx;
}


.itemcenter {
  width: 100%;
  padding-right: 150rpx;
  display: flex;
}

.itemcenter input {
  width: 100%;
  height: 30px;
  margin-top: 10px;
  font-size: 14px;
}

.itemright {
  position: absolute;
  right: 0;
  width: 150rpx;
  height: 50px;
  padding-right: 10rpx;
}

.itemcenter button {
  width: 160rpx;
}
.twoline{
  line-height: 25px;
  font-size: 12px;
  text-align: left;
}

.captach {
  padding: 0;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
  font-size: 14px;
}

.submit{
  width: 90%;
  line-height: 2;
  background: #08bb06;
  color: #ffffff;
  position: absolute;
  bottom: 10vw;
  left:5vw;
}