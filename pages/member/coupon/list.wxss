.container {
  width: 93%;
}

.voucher {
  width: 100%;
  padding: 0 24rpx 20rpx;
  overflow: hidden;
  background: #f4f4f4;
  position: relative;
  z-index: 99;
}

.list-ul {
  padding: 0;
  margin: 0;
  list-style: none;
}

.list-li {
  position: relative;
  width: 100%;
  height: 110px;
  margin-top: 10px;
  border-bottom: #ff7900 solid 3px;
}

.list-a {
  display: block;
  width: 100%;
  height: 220rpx;
}

.li-title {
  display: inline-block;
  position: relative;
  max-width: 76%;
  height: 80rpx;
  padding: 42rpx 92rpx 0 40rpx;
  margin: 0;
  font-style: normal;
  color: #ff7900;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.li-h {
  font-weight: 700;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 36rpx;
}

.li-em {
  position: absolute;
  top: 48rpx;
  right: 0;
  padding: 2rpx 6rpx;
  background: #dc2727;
  line-height: 32rpx;
  text-align: center;
  font-style: normal;
  font-size: 24rpx;
  border-radius: 14rpx;
  color: #fff;
}

.useCoupon {
  position: absolute;
  top: 48rpx;
  right: 0;
  padding: 2rpx 6rpx;
  background: #999;
  line-height: 32rpx;
  text-align: center;
  font-style: normal;
  font-size: 24rpx;
  border-radius: 14rpx;
  color: #fff;
}

.li-time {
  position: absolute;
  left: 40rpx;
  top: 100rpx;
  font-size: 26rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: #ff7900;
}

.li-price {
  position: absolute;
  right: 40rpx;
  top: 56rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #ff7900;
}

.pri-icon {
  width: 10rpx;
  font-size: 40rpx;
}

.pri-b {
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-weight: bold;
  font-size: 60rpx;
}

.pri-span {
  display: block;
  position: absolute;
  right: 40rpx;
  top: 116rpx;
  font-size: 30rpx;
  color: #ff7900;
}

.pri-p {
  position: absolute;
  left: 40rpx;
  bottom: 24rpx;
  margin: 0;
  font-size: 28rpx;
  color: #999;
}
