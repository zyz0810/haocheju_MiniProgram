/* pages/member/feedback/feedback.wxss */
textarea {
    display: block;
    width: 92%;
    min-height: 200px;
    padding: 2%;
    margin: 10rpx auto;
    font-size: 14px;
    font-family: Microsoft YaHei,-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    background: #fff;
    border: 1px solid #ccc;
}
.chooseImg{
  width: 100px;
  height: 100px;
  margin: 0 2%;
  overflow: hidden;
  position: relative;
}
.delete{
  position: absolute;
  top: 0;
  right: 0;
}
.chooseImg image{
  width: 100%;
  height: 100%;
}
button{
  color: #fff !important;
  background: #0f84de !important;
  margin: 50rpx auto 20rpx;
}

#getcap{
  width: 200rpx;
  background:#00a0e9;
  border-radius: 10rpx;
  margin: 0;
  padding: 0;
}
.cont .left,.cont .center{
  justify-content:  flex-start;
  align-items: center;
}
.cont .center{
  flex-direction: row;
}
.cont{
  margin-top: 20rpx;
}