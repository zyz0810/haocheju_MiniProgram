@import "/template/actionsheet/actionsheet";
@import "/template/password/payPassword";
@import "/template/jumpPay/jumpPay.wxss";

.top {
  background: #fff;
  padding-top: 40rpx;
  line-height: 2;
}

.listItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 20rpx;
}

.listItem .overone {
  max-width: 60%;
  word-break: break-all;
}

.payMethod {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: #fff;
}

.payMethod image {
  display: block;
  width: 60rpx;
  height: 60rpx;
}

.submit {
  width:70%;
  margin: 200rpx auto 0;
  line-height: 2.5;
  font-size: 32rpx;
  background: #F85151!important;
}

.couponSelect {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1001;
}

.couponSelect .border_bottom::after {
  bottom: 0;
}

.couponSelect .couponmask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1002;
}

.couponSelect .couponContent {
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 1003;
}

.couponContent .couponSelectTitle {
  background: #efeff4;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.couponContent .couponSelectTitle image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 25rpx;
  right: 25rpx;
}

.couponContent .couponList {
  max-height: 50vh;
  background: #fff;
  box-sizing: border-box;
  overflow-y: scroll;
}

.couponContent .couponList>view {
  padding: 4%;
}

.couponContent .couponOp>view {
  text-align: center;
  flex: 1;
  color: white;
  padding: 20rpx;
}
