/* pages/hire/hire.wxss */

page {
  background: #fff;
}

.publish {
  padding: 30rpx 0 20rpx;
}

.publish .flex-item {
  padding: 2%;
  color: #0f84de;
}

.publish .flex-item>view {
  display: inline-block;
  width: 80%;
  padding: 10rpx 0;
  background: #dceffd;
}

.tab .flex-item {
  padding: 10rpx;
}

.tab .flex-item>text {
  display: inline-block;
  /* width: 90%; */
}

.tab .flex-item.active>text {
  color: #0f84de;
  border-bottom: 2px solid #0f84de;
}

.list_item{
      width: 92vw;
    padding-bottom: 2vw;
    margin: 2vw auto;
    border-radius: 3px;
    box-shadow: 0 0 8px #d9ebf7;
    position: relative;
}
.list_item .site{
      width: 96%;
    padding: 2% 0 0;
    margin: 0 2vw;
}

.headImg {
  width: 9vw;
  height: 9vw;
  border-radius: 50%;
}
.name{
  margin: 0 20rpx;
}

.headImg image {
  width: 100%;
  border-radius: 50%;
}

.site .left {
  width: 6vw;
  height: 6vw;
  margin-right: 2vw;
  border-radius: 50%;
  justify-content:center;
}

.start_icon {
  background: #0f84de;
}
.end_icon {
    background: #ec0909;
}

.start_icon,.end_icon {
  display: inline-block;
  width: 6vw;
  height: 6vw;
  line-height: 6vw;
  margin-right: 2vw;
  border-radius: 50%;
}
.site .center>view{
  line-height: 1.6em;
}

.carpool_call {
  position: absolute;
    top: 120rpx;
    right: 2vw;
    z-index: 99;
    display: block;
    width: 20vw;
    height: 9vw;
    line-height: 9vw;
    background: -webkit-linear-gradient(#1a89df,#0971c0);
    background: linear-gradient(#1a89df,#0971c0);
}