/* pages/appointment/appointment.wxss */
.car {
  margin-bottom: 2%;
}
.car .left {
  position: relative;
  width: 30vw;
  height: 26vw;
  margin-right: 2%;
}

.car .left image {
  width: 100%;
  height: 100%;
}

.tag {
  display: inline-block;
  padding: 0 5px;
  position: absolute;
  z-index: 9999;
  top: 0;
  left: 0;
  color: #fff;
  background: #0f84de;
}
.car .center{
  -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    justify-content: space-between;
}
button{
  color: #fff !important;
  background: #0f84de !important;
  margin: 50rpx auto 20rpx;
}

#getcap{
  width: 200rpx;
  background:#00a0e9;
  border-radius: 10rpx;
  margin: 0;
  padding: 0;
}
.cont .left,.cont .center{
  justify-content:  flex-start;
  align-items: center;
}
.cont .center{
  flex-direction: row;
}