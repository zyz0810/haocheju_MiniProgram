}

.search_frame .iconfont{
  position: absolute;
  top: 20rpx;
  left: 10rpx;
}
.search_frame input{
  padding-left: 50rpx;
  height: 50rpx !important;
  min-height: 50rpx !important;
}
.cont{
  padding: 2%;
}
.hotSearch{
  padding-top: 30rpx;
}
.hotSearch text{
      display: inline-block;
