.pageTop{
    background: #fff;
    text-align: center;
    padding: 60rpx 0;
    border-bottom: 1px solid #d9d9d9;
}
.pageTop view+view{
    margin-top: 15rpx;
}
.code{
    display: flex;
    flex-direction: row;
    padding: 80rpx 30rpx 0;
    align-items: center;
    justify-content: space-between;
    background: #f4f4f4;
}
.code text{
    display: block;
    flex: 1;
    text-align: center;
    margin: 0 10rpx; 
    line-height: 3;
    border-bottom: 1px solid #666;
    height: 100rpx;
}
.code input{
    position: absolute;
    width: 1000rpx;
    right: 0;
    height: 100rpx;
}
.sendAgain{
    text-align: center;
    color: #666;
    margin-top: 40rpx;
}