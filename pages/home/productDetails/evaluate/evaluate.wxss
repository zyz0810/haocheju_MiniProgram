/* pages/home/productDetails/evaluate/evaluate.wxss */
.evaluate{
  width: 95%;
  border-radius: 10px;
  background: #fff;
  margin: 10rpx auto 0; 
}
.evaluate,.tips{
  position: relative;
  z-index: 99;
}
.evaluate .lineItem{
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.lineItem .touxiang{
  width: 10vw;
  height: 10vw;
  border-radius: 50%;
  margin-right: 2vw;
}
.lineItem .touxiang image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.evaluate .content{
  line-height: 3em;
  padding: 0 2vw;
}
.evaluate .img{
  padding: 0 2vw;
}
.evaluate .img image{
  width: 29vw;
  height: 29vw;
  margin-top: 2vw;
  margin-right: 2vw;
}
.evaluate .img image:nth-child(3n){
  margin-right: 0;
}
.evaluate .star{
  line-height: 2em;
  padding-right: 10rpx;
}
