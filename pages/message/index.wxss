page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: auto;
  justify-content: flex-start;
  overflow-y: scroll;
}

.chatItem {
  width: 710rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  background: #fff;
}

.head {
  position: relative;
}

.head .unread {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: red;
  border-radius: 50%;
  top: -10rpx;
  right: -10rpx;
}

.head, .head image {
  width: 100rpx;
  height: 100rpx;
}

.head.small, .head.small image {
  width: 80rpx;
  height: 80rpx;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  line-height: 1;
  margin-left: 20rpx;
  width: 380rpx;
}

.name {
  color: #000;
}

.details {
  color: #999;
}

.time {
  font-size: 26rpx;
  color: #999;
  margin-left: auto;
}

.deleteShow {
  position: fixed;
  z-index: 999;
  background: #fff;
  width: 150rpx;
  padding: 20rpx 25rpx 30rpx;
  box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
}

.lineItem {
  align-items: center;
}

.orderItem .head {
  border: none;
  padding-bottom: 0;
}

.orderItem .details image {
  width: 200rpx;
  height: 200rpx;
}

.orderItem .details .center {
  justify-content: space-between;
  padding-left: 20rpx;
  line-height: 1.5;
}

.billItem {
  padding-bottom: 4%;
  line-height: 1.5;
}

.billItem image, .systemItem image {
  width: 80rpx;
  height: 80rpx;
}

.billItem.lineItem .lineItem, .systemItem.lineItem .lineItem {
  border: none !important;
}

.billItem .center .lineItem, .systemItem .center .lineItem {
  padding-left: 0;
}

.billItem .center, .systemItem .center {
  padding-left: 20rpx;
}

.billItem .overone {
  width: 600rpx;
}

.orderItem, .billItem, .systemItem {
  position: relative;
}

.orderItem .messageDot, .billItem .messageDot, .systemItem .messageDot {
  position: absolute;
  top: 35rpx;
  left: 75rpx;
  width: 16rpx;
  height: 16rpx;
  background: red;
  border-radius: 50%;
}
