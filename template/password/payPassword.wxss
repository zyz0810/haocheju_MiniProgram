/* 密码框  */

.pay-pass {
  background: #fff;
  /* border-radius: 12rpx; */
  display: block;
  /* margin-top: -160rpx; */
  overflow: hidden;
  position: fixed;
  top: 20%;
  width: 100%;
  z-index: 100001;
  height: 80%;
}

.pas-title {
  color: #333;
  font-size: 32rpx;
  font-weight: normal;
  height: 92rpx;
  line-height: 92rpx;
  margin: 0;
  padding: 0;
  position: relative;
  text-align: center;
  width: 100%;
  /* border-bottom: 1px solid #eee; */
}

.pas-title .iconfont {
  position: absolute;
  left: 2vw;
  font-size: 50rpx;
}

.pas-title:after {
  background: #dedede;
  bottom: 0;
  content: '';
  height: 1px;
  /* left: 24rpx; */
  overflow: hidden;
  position: absolute;
  right: 0;
  width: 100%;
}

.pas-num {
  color: #dd2a2a;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  line-height: 90rpx;
  margin: 0;
  padding: 0;
  position: relative;
  text-align: center;
  width: 100%;
}

.pas-box {
  display: block;
  overflow: hidden;
  width: 100%;
  margin-top: 20px;
}

.pay-box-six {
  display: block;
  overflow: hidden;
  width: 90%;
  margin: 0 auto;
}

.pay-six {
  border-bottom: 1rpx solid #ddd;
  border-radius: 6rpx;
  border-right: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  height: 110rpx;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  width: 90%;
}

.pay-i {
  border-left: 1rpx solid #ddd;
  display: block;
  float: left;
  height: 110rpx;
  padding: 10rpx 0 0 -4rpx;
  width: 16.2%;
}

.pay-i.pay-active {
  background: url('data:image/gif;base64,') no-repeat center center;
}

.pay-b {
  background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAAfUlEQVRYhe3TIQ6EMBBGYQ6CQCAm6Zu5NKJirwMnWIlYwQEWQw1hDUlLsvm/ZPS8tmnXiYiI3BARPZCBFXgDU0T0LZevwPc0HzMbqgccJz8vL5NbBCy/Atx9rh7g7vPTAa9Hn8DMBmC7WL6llMbqASXiuInyDXOz5SIi8nd2Sj1Prfg2jmYAAAAASUVORK5CYII=') no-repeat center center;
  display: block;
  height: 60rpx;
  margin-top: 24rpx;
}

.pas-input {
  border: 0;
  color: #fff;
  font-size: 24rpx;
  height: 110rpx;
  left: -200rpx;
  margin: 0;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  width: 7200rpx;
  z-index: 8;
}

.pay-bg {
  background: rgba(0, 0, 0, 0.5) !important;
  background: #000;
  display: block;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10001;
}

.pas-lose {
  color: #333;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  line-height: 90rpx;
  margin: 0;
  padding: 0;
  position: relative;
  text-align: right;
  width: 100%;
}

.pas-lose text {
  margin-right: 8%;
}